{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\app.js",
            "runtimeArgs": [
                "-r",
                "dotenv/config"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceRoot}",
            "outputCapture": "std",
            "console": "integratedTerminal"
        }
    ]
}